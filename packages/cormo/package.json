{
  "name": "cormo",
  "description": "ORM framework for Node.js",
  "version": "0.13.1",
  "keywords": [
    "orm",
    "mongodb",
    "mysql",
    "sqlite3",
    "postgresql"
  ],
  "homepage": "https://croquiscom.github.com/cormo",
  "bugs": {
    "url": "https://github.com/croquiscom/cormo/issues"
  },
  "author": "Sangmin Yoon <sangmin.yoon@croquis.com>",
  "license": "MIT",
  "bin": {
    "cormo": "./bin/cormo"
  },
  "scripts": {
    "prepublishOnly": "npm run lint && npm run build",
    "build": "rimraf lib && tsc -p src/tsconfig.build.json",
    "lint": "tslint -p tsconfig.json",
    "doc": "node node_modules/.bin/crojsdoc",
    "test:type": "tsc --noEmit",
    "test:lint": "tslint -p .",
    "test:unit": "NODE_ENV=test TZ=Etc/UTC mocha --timeout 5000 --require coffeescript/register --require ts-node/register/transpile-only --exit 'test/*.{js,ts,coffee}'",
    "test": "npm run test:type && npm run test:lint && npm run test:unit --",
    "test:debug": "npm run test:unit -- --inspect-brk=30000"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/croquiscom/cormo.git"
  },
  "main": "./lib",
  "types": "./lib/index.d.ts",
  "dependencies": {
    "chalk": "^3.0.0",
    "commander": "^4.1.1",
    "inflected": "^2.0.4",
    "lodash": "^4.17.15",
    "toposort-class": "^1.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.9",
    "@types/inflected": "^1.1.29",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^7.0.1",
    "@types/mongodb": "^3.3.16",
    "@types/node": "^13.7.4",
    "@types/sinon": "^7.5.1",
    "benchmark": "^2.1.4",
    "chai": "^4.2.0",
    "coffee-coverage": "^3.0.1",
    "coffeescript": "^2.5.1",
    "crojsdoc": "^0.9.5",
    "microtime": "^3.0.0",
    "mocha": "^7.0.1",
    "mongodb": "^3.5.3",
    "mysql": "^2.18.1",
    "pg": "^7.18.2",
    "pg-query-stream": "^3.0.3",
    "redis": "^3.0.2",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.0",
    "sqlite3": "^4.1.1",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0",
    "typescript": "^3.8.2"
  }
}
